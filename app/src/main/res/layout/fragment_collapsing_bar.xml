<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            style="@style/CollapsingBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorSurfaceContainer"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="72dp"
            app:expandedTitleMarginStart="24dp"
            app:maxLines="2"
            app:titleCollapseMode="scale">

            <ImageView
                android:id="@+id/endIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/album"
                android:src="@drawable/ic_album" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/albumCoverContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="72dp"
                android:fitsSystemWindows="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/albumCover2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="52dp"
                    android:alpha="0.33"
                    android:background="?attr/colorSurfaceContainerHigh"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1,1"
                    app:layout_constraintEnd_toEndOf="@id/albumCover"
                    app:layout_constraintHeight_max="@dimen/max_cover_size"
                    app:layout_constraintStart_toStartOf="@id/albumCover"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/max_cover_size"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
                    tools:ignore="ImageContrastCheck" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/albumCover1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.66"
                    android:background="?attr/colorSurfaceContainerHigh"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1,1"
                    app:layout_constraintEnd_toEndOf="@id/albumCover"
                    app:layout_constraintHeight_max="@dimen/max_cover_size"
                    app:layout_constraintStart_toStartOf="@id/albumCover"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/max_cover_size"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
                    tools:ignore="ImageContrastCheck" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/albumCover"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?attr/colorSurfaceContainerHigh"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1,1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_max="@dimen/max_cover_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/max_cover_size"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
                    tools:ignore="ImageContrastCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:menu="@menu/back_more_menu"
                app:navigationContentDescription="@string/close"
                tools:title="@tools:sample/lorem/random" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/toolbarOutline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:alpha="0"
        android:background="?attr/colorOutline"
        android:translationZ="1dp"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_track_small" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>