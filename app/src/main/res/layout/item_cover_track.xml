<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="?itemCoverSize"
    android:layout_height="?itemCoverSize"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="?itemCorner">

    <ImageView
        android:id="@+id/trackImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:background="@drawable/rounded_item_image_bg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/isPlaying"
        style="@style/SmallNowPlayingButton" />
</FrameLayout>
