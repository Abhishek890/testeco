<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Echo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/amoled_bg</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_mono_anim</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1200</item>

        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="coordinatorLayoutStyle">@style/CoordinatorLayout</item>
        <item name="appBarLayoutStyle">@style/AppBar</item>
        <item name="materialCardViewStyle">@style/EchoCardView</item>
        <item name="collapsingToolbarLayoutStyle">@style/CollapsingBar</item>

        <item name="android:colorBackground">?echoBackground</item>

        <item name="echoBackground">?colorSurface</item>
        <item name="navBackground">?colorSurfaceContainer</item>
    </style>

    <style name="Default.Theme.Echo" parent="Base.Theme.Echo"/>
    <style name="Amoled">
        <item name="echoBackground">@color/amoled_bg</item>
    </style>
    <style name="MoreAmoled" parent="Amoled">
        <item name="navBackground">@color/amoled_bg</item>
    </style>
</resources>